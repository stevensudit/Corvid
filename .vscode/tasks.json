{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "C:\\Program Files\\LLVM\\bin\\clang++.exe",
            "args": [
                "-std=c++23",
                "-stdlib=libc++",  // Use libc++ instead of MSVC's standard library
                "-nostdinc++",      // Prevent inclusion of MSVC C++ headers
                "-isystem",
                "C:/Program Files/LLVM/include/c++/v1",  // Path to libc++ headers (adjust if needed)
                "-L",
                "C:/Program Files/LLVM/lib/clang/19/lib/windows",  // Path to libc++ libraries (adjust if needed)
                "-lc++",                      // Link against libc++
                "-lc++abi",                   // Link against libc++abi
                "-Wall",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "make test",
            "type": "shell",
            "command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe -C tests test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
